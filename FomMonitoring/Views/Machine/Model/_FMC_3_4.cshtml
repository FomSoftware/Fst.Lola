@model FomMonitoringBLL.ViewModel.MachineViewModel
@using FomMonitoringResources

<div class="col">
    <div class="row justify-content-center">
        <div id="buttons-bar" class="col-sm-12 col-md-12 col-lg-12 col-xl-12" v-show="isMobile()">
            <div class="btn-group col" style="background-color: transparent;">
                <button type="button" id="btn-efficiency" data-panel="efficiency" class="no-borders" style="width: 25%; background-color: transparent;">
                    <span >
                        <i class="fa icofom-efficiency color-green"></i>
                    </span>
                </button>
                <button type="button" id="btn-production" data-panel="production" class="no-borders" style="width: 25%; background-color: transparent;">
                    <span>
                        <i class="fa icofom-productivity color-red"></i>
                    </span>
                </button>
                <button type="button" id="btn-maintenance" data-panel="maintenance" class="no-borders" style="width: 25%; background-color: transparent;">
                    <span class="fa fa-stack">
                        <i class="fa fa-circle fa-stack-2x" style="color: cornflowerblue;"></i>
                        <i class="fa fa-info fa-inverse fa-stack-1x"></i>
                    </span>
                </button>
                <button type="button"  id="btn-ordersStandard" data-panel="ordersStandard" class="no-borders" style="width: 25%; background-color: transparent;">
                    <span>
                        <i class="fa icofom-jobs color-orange"></i>
                    </span>
                </button>
            </div>
        </div>
    </div>
    <div class="row justify-content-center machine-image-wrapper">
        <div class="col-sm-12 col-md-12 col-lg-10 col-xl-9">
            <div style="height: 65%;padding-bottom: 13px">
                @Html.Action("GetHtmlPage", "Shared", new { path = "/images/panels/FMC-immagine_macchina_LUNGA.svg" })
            </div>
        </div>
    </div>

    <div id="panels-box" class="row justify-content-center">
        <div class="col-sm-12 col-md-12 col-lg-12 col-xl-12" style="background-color: #cbcaca; padding-top: 30px; padding-bottom: 30px; width: 100%; height: 32%;" v-show="machineGroupSelected == null && machinePanelSelected == null && isMobile()">
            <div class="btn-group machine-group-selection" style="width: 100%; background-color: #cbcaca">
                    <button type="button" data-group="FMC3-4_axes" class="no-borders" style="width: 33%;background-color: #cbcaca">
                        <img class="img-button-group" src="/Images/panels/CARD-AXES_220X220px.svg" />
                    </button>
                    <button type="button" data-group="FMC3-4_tools" class="no-borders" style="width: 33%;background-color: #cbcaca">
                        <img class="img-button-group" src="/Images/panels/CARD-TOOLS_220X220px.svg" />
                    </button>
                    <button type="button" data-group="FMC3-4_spindles" class="no-borders" style="width: 33%;background-color: #cbcaca">
                        <img class="img-button-group" src="/Images/panels/CARD_SPINDLE_220X220px.svg" />
                    </button>
                </div>
        </div>
        <div class="col-sm-12 col-md-12 col-lg-12 col-xl-12 panels-area" v-show="machineGroupSelected != null || machinePanelSelected != null || !isMobile()">
            <div class="row">
                <div class="col-xl-4 col-lg-6 col-md-6 col-sm-12 col-12" v-show="machinePanelSelected == 'efficiency' || (!isMobile() && (machineGroupSelected == null && machinePanelSelected == null))">
                    @Html.Partial("Panels/_Efficiency", Model.Efficiency)
                </div>
                <div class="col-xl-4 col-lg-6 col-md-6 col-sm-12 col-12" v-show="machinePanelSelected == 'production' || (!isMobile() && (machineGroupSelected == null && machinePanelSelected == null))">
                    @Html.Partial("Panels/_Productivity", Model.Productivity)
                </div>
                <div class="col-xl-4 col-lg-6 col-md-6 col-sm-12 col-12" v-show="machinePanelSelected == 'ordersStandard' || (!isMobile() && (machineGroupSelected == null && machinePanelSelected == null))">
                    @Html.Partial("Panels/_Jobs", Model.Jobs)
                </div>
                <div class="col-xl-4 col-lg-6 col-md-6 col-sm-12" v-show="machinePanelSelected != null && machinePanelSelected != 'maintenance' && isMobile()">
                    <div class="empty-area" style="height: 100%"></div>
                </div>
            </div>
            <div class="row">
                <div class="col-xl-4 col-lg-6 col-md-6 col-sm-12 col-12" v-show="machineGroupSelected == 'FMC3-4_axes'">
                    @Html.Partial("Panels/ElectroSpindle/_OtherMachineData", Model.PanelParameter)
                </div>
                <div class="col-xl-4 col-lg-6 col-md-6 col-sm-12 col-12" v-show="machineGroupSelected == 'FMC3-4_spindles'">
                    @Html.Partial("Panels/ElectroSpindle/_ElectroSpindle", Model.PanelParameter)
                </div>
                <div class="col-xl-4 col-lg-6 col-md-6 col-sm-12 col-12" v-show="machineGroupSelected == 'FMC3-4_tools'">
                    @Html.Partial("Panels/Tools/_FmcLmx", Model.PanelParameter)
                </div>
                <div class="col-xl-4 col-lg-6 col-md-6 col-sm-12 col-12 order-xl-last" v-show="machinePanelSelected == 'maintenance' || (!isMobile() && (machineGroupSelected == null && machinePanelSelected == null))">
                    @Html.Partial("Panels/_Maintenance", Model.Maintenance)
                </div>
                <div class="col-xl-4 col-lg-6 col-md-6 col-sm-12" v-show="(machineGroupSelected != null || machinePanelSelected != null) && isMobile()">
                    <div class="empty-area" style="height: 100%"></div>
                </div>
                <div class="col-xl-8 col-lg-12 col-md-12 col-sm-12 card-wrap-2">
                    @Html.Partial("Panels/_Messages", Model.Messages)
                    <div class="empty-area" style="background-size: 49%;" v-show="machineGroupSelected == null && isMobile() == false"></div>
                </div>
            </div>
        </div>

    </div>
</div>
<script>
    $(document).ready(function ()
    {
        ImageManager.init();      
    });
</script>