@model FomMonitoringBLL.ViewModel.JobViewModel
@using FomMonitoringResources

<div id="CardJobs" class="portlet">
    <div class="portlet-title">
        <div class="portlet-kpi" v-cloak>
            <span class="fa-stack fa-lg">
                <i class="fa fa-circle fa-stack-2x" v-bind:class="colorOrders"></i>
                <i class="fa icofom-jobs fa-stack-1x fa-inverse"></i>
            </span>
        </div>
        <div class="title-kpi">
            @Resource.Orders
            <div class="sub-period js-period d-none d-sm-block"></div>
        </div>
    </div>
    <div class="portlet-body border-panel" v-bind:class="colorOrders">
        <div class="card-portlet table-container" v-if="jobs != null" v-cloak>

            <table class="table table-alerts table-jobs table-header">
                <thead>
                    <tr>
                        <th width="35%" class="th-duration sorting" v-bind:class="sortingCode" v-on:click="sortCode()">
                            <span class="value-title">@Resource.Code</span>
                        </th>
                        <th  width="5%" class="th-duration sorting" v-bind:class="sortingProgress" v-on:click="sortProgress()">
                            <span class="value-title" style="font-size: 14px;font-weight: bold">%</span>
                        </th>
                        <th style="width:22%;padding-left:10px" class="th-duration sorting" v-bind:class="sorting.day" v-on:click="sortDay()">
                            <span class="value-title">@Resource.Date</span>
                        </th>
                        <th style="width:20%" class="th-duration sorting" v-bind:class="sorting.duration" v-on:click="sortDuration()">
                            <i class="fa fa-clock-o color-aaa"></i>
                            <span class="value-title">@Resource.Time</span>
                        </th>
                        <th  style="width:18%" class="th-duration sorting" v-bind:class="sorting.quantity" v-on:click="sortQuantity()">
                            <i class="fa fa-puzzle-piece color-aaa"></i>
                            <span class="value-title">pz</span>
                        </th>
                    </tr>
                </thead>
            </table>
            <div class="slimscroll">
                <table class="table table-alerts table-jobs">
                    <tbody>
                    <tr v-for="job in jobs" v-cloak>
                        <td style="width:35%">
                            <div class="worder-info">
                                <div class="progress progress-job">
                                    <div class="progress-bar" v-bind:class="bgClass(job.perc)" v-bind:aria-valuenow="job.perc"></div>
                                </div>
                                <div class="item-alert">
                                    <div class="code-alert">
                                        {{ job.code }}
                                    </div>
                                </div>
                            </div>
                        </td>
                        <td>
                            <div class="code-alert"  width="5%">
                                <span class="pull-left" style="font-size: 16px;">{{ job.perc }}<em>%</em></span>
                            </div>
                        </td>
                        <td style="width:22%">
                            <span >{{job.formatted_day}}</span>
                        </td>
                        <td style="width:20%">
                            <span >
                                <time-span v-bind:duration="job.time"></time-span>
                            </span>
                        </td>
                        <td style="width:18%">
                            <!--<span class="label label-default">{{ job.quantity_day }}</span>-->
                            <span >{{ job.quantity }}/{{ job.pieces }}</span>
                        </td>
                    </tr>
                   

                    </tbody>
                </table>
            </div>
        </div>
        <no-data v-else></no-data>
    </div>
</div>

<script type="application/javascript">

    $(document).ready(function ()
    {
        var data = @Html.Raw(Json.Encode(Model));
        Jobs.init(data);
    });

</script>

