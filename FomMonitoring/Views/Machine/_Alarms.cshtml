@model FomMonitoringBLL.ViewModel.AlarmViewModel
@using FomMonitoringResources

<div id="CardAlarms" class="portlet">
    <div class="portlet-title">
        <div class="portlet-kpi" v-cloak>
            <span class="fa-stack fa-lg">
                <i class="fa fa-circle fa-stack-2x" v-bind:class="colorAlarms"></i>
                <i class="fa fa-exclamation-triangle fa-stack-1x fa-inverse"></i>
            </span>
        </div>
        <div class="title-kpi">
            <span>@Resource.Alarms</span>
            <div class="sub-period js-period"></div>
        </div>
        <div class="portlet-details" v-show="show.historical">
            <div class="dropdown" onclick="SharedManager.handlerDropdown($(this))">
                <div class="button drop-btn">
                    <i class="icon-options-vertical"></i>
                </div>
                <div class="dropdown-content right">
                    <div class="dd-item js-unflip active" data-group="alarms">
                        <i class="fa fa-dashboard"></i>
                        <span>Dashboard</span>
                    </div>
                    <div class="dd-item js-flip slide-history" data-group="alarms">
                        <i class="fa fa-history"></i>
                        <span>@Resource.Historical</span>
                    </div>
                    <div class="dd-item js-flip slide-summary" data-group="alarms">
                        <span>Summary</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="portlet-body">
        <div class="card-portlet card-alarms" v-cloak>
            <div class="front" style="padding: 0px;">
                <div v-if="alarms != null">
                    <div class="slimscroll">
                        <table class="table table-alerts">
                            <thead>
                                <tr>
                                    <th style="padding-left:10px">
                                        <span class="value-title">
                                            @Resource.Code
                                        </span>
                                    </th>
                                    <th class="th-duration sorting" v-bind:class="sortingDet.timestamp" v-on:click="sortTimestamp()">
                                        <i class="fa fa-clock-o color-aaa"></i>
                                        <span class="value-title">
                                            @Resource.Timestamp
                                        </span>
                                    </th>
                                    <th>
                                        <span class="value-title">
                                            @Resource.Description
                                        </span>
                                    </th>
                                </tr>
                            </thead>
                            <tbody v-for="alarm in details">
                                <tr>
                                    <td>
                                        <div class="item-icon fa fa-2x" v-bind:class="iconClass(alarm.type)"></div>
                                        <div class="item-alert">
                                            <div class="code-alert">{{ alarm.code }}</div>
                                            <div class="subtitle-alert" v-bind:class="colorClass(alarm.type)">{{ alarm.type }}</div>
                                        </div>
                                    </td>
                                    <td>{{ convert_timestamp(alarm.timestamp) }}</td>
                                    <td>{{ alarm.description }}</td>
                                </tr>                               
                            </tbody>
                        </table>
                    </div>
                </div>
                <no-data v-else></no-data>
            </div>
            <div class="back">
                <div class="swiper-container alarms">
                    <div class="swiper-wrapper">
                        <div class="swiper-slide">
                            <div id="alm_historical_chart"></div>
                            <no-data v-if="!show.historical"></no-data>
                        </div>
                        <div class="swiper-slide">
                            <div id="alm_summary" v-if="alarms != null">
                                <div class="slimscroll">
                                    <table class="table table-alerts">
                                        <thead>
                                            <tr>
                                                <th class="th-title">
                                                </th>
                                                <th class="th-duration sorting" v-bind:class="sorting.duration" v-on:click="sortDuration()">
                                                    <i class="fa fa-clock-o color-aaa"></i>
                                                    <span class="value-title">
                                                        @Resource.Time
                                                    </span>
                                                </th>
                                                <th class="th-number sorting" v-bind:class="sorting.quantity" v-on:click="sortQuantity()">
                                                    <i class="fa fa-exclamation-triangle color-aaa"></i>
                                                    <span class="value-title">qty</span>
                                                </th>
                                            </tr>
                                        </thead>
                                        <tbody v-for="alarm in alarms">
                                            <tr class="clickable" v-on:click="showDescription(alarm, $event)">
                                                <td v-bind:class="{'without-icon': !isThereDesc(alarm) }">
                                                    <a href="javascript:void(0)" class="click-more" v-if="isThereDesc(alarm)">
                                                        <i class="icon-plus"></i>
                                                    </a>
                                                    <div class="item-icon fa fa-2x" v-bind:class="iconClass(alarm.type)"></div>
                                                    <div class="item-alert">
                                                        <div class="code-alert">{{ alarm.code }}</div>
                                                        <div class="subtitle-alert" v-bind:class="colorClass(alarm.type)">{{ alarm.type }}</div>
                                                    </div>
                                                </td>
                                                <td>
                                                    <span class="label label-default">
                                                        <time-span v-bind:duration="alarm.time"></time-span>
                                                    </span>
                                                </td>
                                                <td>
                                                    <span class="label label-default">{{ alarm.quantity }}</span>
                                                </td>
                                            </tr>
                                            <tr class="tr-more display-none">
                                                <td colspan="3">{{ alarm.description }}</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            <no-data v-else></no-data>
                        </div>
                    </div>
                </div>
        </div>
    </div>
</div>
</div>
<script type="text/javascript">

    $(document).ready(function ()
    {
        var data = @Html.Raw(Json.Encode(Model));
        Alarms.init(data);
    });

</script>