@model FomMonitoringBLL.ViewModel.PlantMessagesViewModel
@using FomMonitoringResources

<div id="CardPlantMessages" class="portlet">
    <div class="portlet-title">
        <div class="portlet-kpi" v-cloak>
            <span class="fa-stack fa-lg">
                <i class="fa fa-circle fa-stack-2x" v-bind:class="colorAlarms"></i>
                <i class="fa fa-exclamation-triangle fa-stack-1x fa-inverse"></i>
            </span>
        </div>
        <div class="title-kpi">
            <span>@Resource.Messages</span>
            <div class="sub-period js-period"></div>
        </div>        
    </div>
    <div class="portlet-body">
        <div class="card-portlet card-messages" v-cloak>
            <div class="front" style="padding: 0px;">
                <div v-if="messages != null">
                    <div id="slimscroll-plant-msg-wrapper">
                        <div class="slimscroll">
                            <table class="table data-table table-alerts">
                                <thead>
                                    <tr>
                                        <th class="th-duration sorting" v-bind:class="sorting.serial" v-on:click="sortSerialMachine()">
                                            <span class="value-title">                                              
                                                @Resource.Name @Resource.Machine
                                            </span>
                                        </th>
                                        <th class="th-duration sorting" v-bind:class="sorting.model" v-on:click="sortModelMachine()">
                                            <span class="value-title">
                                                @Resource.Serial
                                            </span>
                                        </th>
                                        <th style="padding-left:10px">
                                            <span class="value-title">
                                                @Resource.Code
                                            </span>
                                        </th>
                                        <th class="th-duration sorting" v-bind:class="sorting.timestamp" v-on:click="sortTimestamp()">
                                            <i class="fa fa-clock-o color-aaa"></i>
                                            <span class="value-title">
                                                @Resource.Timestamp
                                            </span>
                                        </th>                                        
                                        <th class="th-duration sorting" v-bind:class="sorting.group" v-on:click="sortGroup()">
                                            <span class="value-title">
                                                @Resource.Group
                                            </span>
                                        </th>
                                        <th>
                                            <span class="value-title">
                                                @Resource.Description
                                            </span>
                                        </th>
                                    </tr>
                                </thead>
                                <tbody v-for="message in messages">
                                    <tr>
                                        <td>{{ message.machine.model }}</td>
                                        <td>{{ message.machine.serial }}</td>
                                        <td>
                                            <div class="item-icon fa fa-2x" v-bind:class="iconClass(message.message.type)"></div>
                                            <div class="item-alert">
                                                <div class="code-alert">{{ message.message.code }}</div>
                                                <div class="subtitle-alert" v-bind:class="colorClass(message.message.type)">{{ message.message.type }}</div>
                                            </div>
                                        </td>
                                        <td>{{ message.message.formatted_timestamp }}</td>                                        
                                        <td>{{ message.message.group }}</td>
                                        <td>{{ message.message.description }}</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <no-data v-else></no-data>
            </div>
           
    </div>
</div>
</div>
<script type="text/javascript">

    $(document).ready(function ()
    {
        var data = @Html.Raw(Json.Encode(Model));
        PlantMessages.init(data);
    });

</script>