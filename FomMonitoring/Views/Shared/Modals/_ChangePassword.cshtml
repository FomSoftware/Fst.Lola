@using FomMonitoringResources

<div class="modal" id="change-password-modal" tabindex="-1" role="dialog" data-keyboard="false"  data-backdrop="static" >
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title pull-left margin-top-5">@Resource.ChangePassword</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" id="close"><span aria-hidden="true">&times;</span></button>
            </div>
            <div class="modal-body">
                <form class="form-horizontal">
                    <fieldset>
                        <div class="form-group row">
                            <label class="col-4 control-label" for="username-input">@Resource.LastPassword:</label>
                            <div class="col-7">
                                <input name="username-input" class="form-control input-md modal-input" id="last-password" type="password" placeholder="@Resource.LastPassword" required>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-4 control-label" for="name-input">@Resource.NewPassword:</label>
                            <div class="col-7">
                                <div class="input-group">
                                    <input name="name-input" class="form-control input-md modal-input" id="new-password" type="password" placeholder="@Resource.NewPassword" required>
                                    <span class="input-group-btn" style="padding-top: 8px;">
                                        <button type="button" role="button" class="btn btn-annulla" style="height: 35px" data-container="body" data-toggle="popover" data-placement="bottom" data-trigger="focus" data-content="@Resource.PasswordPolicy">
                                            <span class="fontawesome-question-sign" aria-hidden="true"></span>
                                        </button>
                                    </span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-4 control-label" for="lastname-input">@Resource.RepeatNewPassword:</label>
                            <div class="col-7">
                                <div class="input-group">
                                    <input name="lastname-input" class="form-control input-md modal-input" id="repeat-new-password" type="password" placeholder="@Resource.NewPassword" required>
                                    <span class="input-group-btn" style="padding-top:8px;">
                                        <button type="button" role="button" class="btn btn-annulla" style="height: 35px" data-container="body" data-toggle="popover" data-placement="bottom" data-trigger="focus" data-content="@Resource.PasswordPolicy">
                                            <span class="fontawesome-question-sign" aria-hidden="true"></span>
                                        </button>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" data-dismiss="modal" class="btn btn-annulla">@Resource.Cancel</button>
                <button type="button" class="btn btn-confirm" onclick="UserManager.changePasswordClick()">@Resource.Save</button>
            </div>
        </div>
        </div>
</div>