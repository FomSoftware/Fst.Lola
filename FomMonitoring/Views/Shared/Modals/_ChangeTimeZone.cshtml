@using FomMonitoringResources

<div class="modal" id="change-timezone-modal" tabindex="-1" role="dialog" data-keyboard="false" data-backdrop="static">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title pull-left margin-top-5">TimeZone</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" id="close"><span aria-hidden="true">&times;</span></button>
            </div>
            <div class="modal-body">
                <div class="row justify-content-center">
                    <div class="col-10" id="modal-timezone-advertise">
                        <p class="text-left">@Resource.Modal_TimeZone_Advertise</p>
                    </div>
                    <div class="col-10">
                        <select class="form-control input-md modal-input" id="timezone-modal-input" title="Timezone">
                        </select>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" data-dismiss="modal" class="btn btn-annulla">@Resource.Cancel</button>
                <button type="button" class="btn btn-confirm" onclick="UserManager.changeTimeZoneClick()">@Resource.Save</button>
            </div>
        </div>
    </div>
</div>
