@using FomMonitoringResources
<!DOCTYPE html>

<html>
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta charset="UTF-8">

    <link rel="shortcut icon" href="~/favicon.ico" type="image/x-icon">
    <title>@ViewBag.AppTitle</title>

    @Styles.Render("~/Content/FomMonitoringStylesLIB")
    @Scripts.Render("~/Scripts/FomMonitoringScriptsLIB")

    @Styles.Render("~/GlobApp/styles/FomMonitoringStylesAPP")
    @Scripts.Render("~/GlobApp/scripts/FomMonitoringScriptsAPP")

</head>
<body>

    <header>
        @Html.Action("_Header", "Shared")
        @Html.Action("_Toolbar", "Shared")

    </header>
    <section class="container-fluid">
        @RenderBody()
    </section>

    <script type="text/x-template" id="no-data">
        <div class="no-data">
            <i class="fa fa-meh-o fa-3x"></i>
            <div>@Resource.NoData</div>
        </div>
    </script>
    <script type="text/x-template" id="offline-machine">
        <div class="offline-machine">
            <i class="fa fa-meh-o fa-3x"></i>
            <div>@Resource.Offline</div>
        </div>
    </script>

    <script type="text/x-template" id="time-span">
        <span v-if="duration != null">
            <span v-if="duration.days != null">
                {{ duration.days }}<em>d</em>
            </span>
            <span v-if="duration.hours != null">
                {{ duration.hours }}<em>h</em>
            </span>
            <span v-if="duration.minutes != null" v-show="showMinutes">
                {{ duration.minutes }}<em>min</em>
            </span>
            <span v-if="duration.seconds != null" v-show="showSeconds">
                {{ duration.seconds }}<em>s</em>
            </span>
        </span>
        <span v-else>
            0<em>s</em>
        </span>
    </script>

    <!--#region modal change password-->
    <div class="modal fade" id="change-password-modal" tabindex="-1" role="dialog" data-keyboard="false" data-backdrop="static">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close" id="close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title pull-left margin-top-5">@Resource.ChangePassword</h4>
                </div>
                <div class="modal-body"></div>
                <form class="form-horizontal">
                    <fieldset>
                        <div class="form-group">
                            <label class="col-md-5 control-label" for="username-input">@Resource.LastPassword:</label>
                            <div class="col-md-5">
                                <input name="username-input" class="form-control input-md modal-input" id="last-password" type="password" placeholder="@Resource.LastPassword" required>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-5 control-label" for="name-input">@Resource.NewPassword:</label>
                            <div class="col-md-5">
                                <input name="name-input" class="form-control input-md modal-input" id="new-password" type="password" placeholder="@Resource.NewPassword" required>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-5 control-label" for="lastname-input">@Resource.RepeatNewPassword:</label>
                            <div class="col-md-5">
                                <input name="lastname-input" class="form-control input-md modal-input" id="repeat-new-password" type="password" placeholder="@Resource.NewPassword" required>
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" data-dismiss="modal" class="btn btn-annulla">@Resource.Cancel</button>
                <button type="button" class="btn btn-confirm" onclick="UserManager.changePasswordClick()">@Resource.Save</button>
            </div>
        </div>
    </div>
    <!--#endregion-->
    <!--#region modal disclamer-->
    <div class="modal fade" id="disclamer-modal" tabindex="-1" role="dialog" data-keyboard="false" data-backdrop="static">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close" id="close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title pull-left margin-top-5">@Resource.Disclamer</h4>
                </div>
                
                   <div class="modal-body">@Html.Raw(Resource.DisclamerBody)</div>
                
                </div>
            <div class="modal-footer">
                <button type="button" data-dismiss="modal" class="btn btn-annulla">@Resource.Cancel</button>                
            </div>
        </div>
    </div>
    <!--#endregion-->
    <script type="text/javascript">

        VueManager.initTimeSpanComponent();
    </script>

</body>
</html>
